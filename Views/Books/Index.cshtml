@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Published Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.title</td>
                @foreach (var author in book.authors)
                {
                    <td>@author.Name</td>
                }
                <td>@book.isbn</td>
                <td>@book.description</td>
                <td>@book.image</td>
                <td>@book.numberOfPages</td>
                <td>@book.description</td>
                <td>@book.language</td>
                <td>@book.publisher</td>

            </tr>
        }
    </tbody>
</table>

